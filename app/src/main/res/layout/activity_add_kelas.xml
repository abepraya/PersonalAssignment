<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.kelas.integration.AddKelasActivity">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="50dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/dateFormatStartKelas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_margin="12dp"
                app:boxBackgroundMode="none"
                android:minHeight="48dp" >

                <EditText
                    android:id="@+id/dateStartKelas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Entry Date"
                    android:inputType="date"
                     />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/dateFormatEndKelas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_margin="12dp"
                android:inputType="date"
                app:boxBackgroundMode="none"
                android:minHeight="48dp" >

                <EditText
                    android:id="@+id/dateEndKelas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="End Date"
                    android:inputType="date"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/menu_instruktur"
                android:textStyle="bold"
                android:paddingLeft="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                />
            <Spinner
                android:id="@+id/editSpInstrukturName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingLeft="15dp"
                android:minHeight="48dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/menu_materi"
                android:textStyle="bold"
                android:paddingLeft="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                />
            <Spinner
                android:id="@+id/editSpMateriName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingLeft="15dp"
                android:minHeight="48dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveDataKelas"
                android:layout_width="250dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/btn_save_data"
                android:backgroundTint="@color/green"
                app:cornerRadius="25dp"
                />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


</LinearLayout>